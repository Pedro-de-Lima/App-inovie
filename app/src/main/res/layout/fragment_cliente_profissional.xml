<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClienteProfissionalFragment">

    <View
        android:id="@+id/viewCliente"
        style="@style/ContainerCliente"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgFace"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/face"
        app:layout_constraintStart_toStartOf="@id/viewCliente"
        app:layout_constraintTop_toTopOf="@+id/viewCliente" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Luciana Santos"
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/imgFace"
        app:layout_constraintTop_toTopOf="@id/viewCliente" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plano Gold"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/imgFace"
        app:layout_constraintTop_toBottomOf="@id/txtNome"
        />

    <TextView
        android:id="@+id/txtProxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Próxima sessão: 2/3 - Criolipólise"
        app:layout_constraintStart_toStartOf="@id/viewCliente"
        app:layout_constraintTop_toBottomOf="@id/imgFace" />

    <TextView
        android:id="@+id/txtUltima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Última sessão: 1/3 - Criolipólise"
        app:layout_constraintStart_toStartOf="@id/viewCliente"
        app:layout_constraintTop_toBottomOf="@id/txtProxima" />

    <TextView
        android:id="@+id/txtData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Data da última sessão: 22/03/22"
        app:layout_constraintStart_toStartOf="@id/viewCliente"
        app:layout_constraintTop_toBottomOf="@id/txtUltima" />

    <View
        android:id="@+id/viewProfissional"
        style="@style/ContainerCliente"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewCliente" />

    <ImageView
        android:id="@+id/imgFaceProfissional"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/face"
        app:layout_constraintStart_toStartOf="@id/viewProfissional"
        app:layout_constraintTop_toTopOf="@+id/viewProfissional" />

    <TextView
        android:id="@+id/txtNomeProfissional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Maria Morais"
        android:textSize="25sp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@id/imgFaceProfissional"
        app:layout_constraintTop_toTopOf="@id/viewProfissional" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fisioterapeuta"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/imgFaceProfissional"
        app:layout_constraintTop_toBottomOf="@id/txtNomeProfissional"
        />

    <TextView
        android:id="@+id/txtAtendimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Último atendimento: 15/06/22, 17:30"
        app:layout_constraintStart_toStartOf="@id/viewProfissional"
        app:layout_constraintTop_toBottomOf="@id/imgFaceProfissional" />

    <TextView
        android:id="@+id/txtCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Cadastrada desde: 23/03/21"
        app:layout_constraintStart_toStartOf="@id/viewProfissional"
        app:layout_constraintTop_toBottomOf="@id/txtAtendimento" />

</androidx.constraintlayout.widget.ConstraintLayout>